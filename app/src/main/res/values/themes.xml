<resources
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Defines the base theme for the ScoreKeeper app, which extends Theme.MaterialComponents.DayNight.DarkActionBar. -->
    <style name="Base.Theme.ScoreKeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!-- Sets the primary brand color to a shade of yellow. -->
        <item name="colorPrimary">@color/backgroundColor</item>
        <!-- Sets the variant of the primary brand color to a darker shade of yellow. -->
        <item name="colorPrimaryVariant">@color/backgroundColor</item>
        <!-- Sets the color of text and icons on the primary brand color to white. -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <!-- Sets the secondary brand color to a shade of yellow. -->
        <item name="colorSecondary">@color/backgroundColor</item>
        <!-- Sets the variant of the secondary brand color to a darker shade of yellow. -->
        <item name="colorSecondaryVariant">@color/backgroundColor</item>
        <!-- Sets the color of text and icons on the secondary brand color to black. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Sets the status bar color to match the primary brand color variant defined above. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>>
    <!-- Theme.ScoreKeeper inherits from Base.Theme.ScoreKeeper. -->
    <style name="Theme.ScoreKeeper" parent="Base.Theme.ScoreKeeper"/>
    <!-- Style for the IncreaseButton. -->
    <!-- Inherits from Base.Theme.ScoreKeeper, sets the background color to a success color and text color to black. -->
    <style name="IncreaseButton" parent="Base.Theme.ScoreKeeper">
        <item name="backgroundTint">@color/backgroundColor</item>
        <item name="android:textColor">@color/white</item>
        <item name= "android:textSize">16sp</item>
    </style>
    <!-- Style for the DecreaseButton. -->
    <!-- Inherits from Base.Theme.ScoreKeeper, sets the background color to a danger color and text color to black. -->
    <style name="DecreaseButton" parent="Base.Theme.ScoreKeeper">
        <item name="backgroundTint">@color/backgroundColor</item>
        <item name="android:textColor">@color/white</item>
        <item name= "android:textSize">16sp</item>
    </style>
    <!-- Style for TextView. -->
    <!-- Inherits from Base.Theme.ScoreKeeper, sets the text color to black. -->
    <style name="TextView" parent="Base.Theme.ScoreKeeper">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
